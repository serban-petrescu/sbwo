<mvc:View controllerName="spet.sbwo.web.controller.misc.UserSettings" xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:spet="spet.sbwo.web.util">
	<Page id="pagUserSettings" 
		title="{i18n>pagUserSettingsTitle}"
		showNavButton="true"
		navButtonPress="onNavBack">
		
		<headerContent>
			<Button icon="sap-icon://key" visible="{= !${view>/edit} }" 
				press="onOpenPasswordDialog" tooltip="{i18n>btnUserPasswordChangeTooltip}"/>
			<Button icon="sap-icon://save" visible="{view>/edit}" press="onSave" tooltip="{i18n>btnEntitySaveChangesTooltip}"/>
			<ToggleButton icon="sap-icon://edit" pressed="{view>/edit}"	press="onToggleEdit" tooltip="{i18n>btnEntityToggleEditModeTooltip}"/>
		</headerContent>
		
		<Panel>
			<f:Form editable="{view>/edit}">
				<f:layout>
					<f:ResponsiveGridLayout labelSpanL="4" labelSpanM="5" emptySpanL="4" emptySpanM="2" columnsL="1" columnsM="1" />
				</f:layout>
				<core:Fragment fragmentName="spet.sbwo.web.fragment.display.UserPreference" type="XML" />
				<core:Fragment fragmentName="spet.sbwo.web.fragment.edit.UserPreference" type="XML" />
			</f:Form>
		</Panel>
		
		<footer>
			<Toolbar>
				<spet:DraftIndicator state="{view>/draft}" visible="{view>/loaded}" />
				<ToolbarSpacer />
				<Button icon="sap-icon://reset" text="{i18n>btnEntityResetText}" visible="{= ${view>/edit} &amp;&amp; ${view>/loaded}}" 
					tooltip="{i18n>btnEntityResetTooltip}" press="onReset" />
			</Toolbar>
		</footer>
		
		<dependents>
			<core:Fragment fragmentName="spet.sbwo.web.fragment.dialog.UserPasswordChange" type="XML" />
		</dependents>
	</Page>
</mvc:View>