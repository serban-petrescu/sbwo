<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:spet="spet.sbwo.web.util"
	xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<spet:EventWrapper sapshow="onAddPersonEmail" saphide="onDeletePersonLastEmail">
		<Panel>
			<headerToolbar>
				<Toolbar>
					<Title text="{i18n>tblPersonEmailsHeader}" />
					<ToolbarSpacer />
					<Button icon="sap-icon://add" tooltip="{i18n>btnAddTooltip}" press="onAddPersonEmail" />
				</Toolbar>
			</headerToolbar>
			<Table items="{data>emailAddresses}" visible="{= ${data>emailAddresses/length} &gt; 0 }" 
				keyboardMode="Edit" mode="Delete" delete="onDeleteCollection">
				<columns>
					<Column minScreenWidth="Medium" demandPopin="true"><header><Label text="{i18n>colPersonEmailAddressHeaderText}" /></header></Column>
					<Column minScreenWidth="Medium" demandPopin="true"><header><Label text="{i18n>colPersonEmailNameHeaderText}" /></header></Column>
					<Column minScreenWidth="Medium" demandPopin="true"><header><Label text="{i18n>colPersonEmailPrimaryHeaderText}" /></header></Column>
				</columns>
				<ColumnListItem vAlign="Middle">
					<Input value="{data>email}" cd:context="/fields/person/email" change="onValueChanged"/>
					<Input value="{data>name}" change="onValueChanged"/>
					<Switch state="{data>primary}" type="AcceptReject" change="onPrimaryFlagChanged"/>
				</ColumnListItem>
			</Table>
		</Panel>
	</spet:EventWrapper>
</core:FragmentDefinition>